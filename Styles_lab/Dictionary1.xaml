<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <col:ArrayList x:Key="fonts">
        <sys:String>Arial</sys:String>
        <sys:String>Times New Roman</sys:String>
        <sys:String>Tahoma</sys:String>
        <sys:String>Verdana</sys:String>
    </col:ArrayList>
    <col:ArrayList x:Key="fontsSizes">
        <sys:Double>14</sys:Double>
        <sys:Double>12</sys:Double>
        <sys:Double>14</sys:Double>
        <sys:Double>16</sys:Double>
        <sys:Double>48</sys:Double>
        <sys:Double>64</sys:Double>
        <sys:Double>72</sys:Double>
    </col:ArrayList>
</ResourceDictionary>